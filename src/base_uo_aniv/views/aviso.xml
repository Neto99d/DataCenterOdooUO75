<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="aviso_view_form" model="ir.ui.view">
        <field name="name">aviso.view.form</field>
        <field name="model">aviso.aviso</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="contenido" />
                        <field name="fecha" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="aviso_view_tree" model="ir.ui.view">
        <field name="name">aviso.view.tree</field>
        <field name="model">aviso.aviso</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name"  />
                <field name="contenido" />
                <field name="fecha" />
            </tree>
        </field>
    </record>

</odoo>